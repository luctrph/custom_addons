<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="student_list_view" model="ir.ui.view">
        <field name="name">student.list.view</field>
        <field name="model">student.profile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record id="student_form_view" model="ir.ui.view">
        <field name="name">student.form.view</field>
        <field name="model">student.profile</field>
        <field name="arch" type="xml">
            <form>
                <sheel>
                    <div class="oe_title">
                        <h1>
                            <group>
                                <field name="name" required="1" placeholder="Name of student"/>
                            </group>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="email" placeholder="abc@xyz"/>
                            <field name="phone" placeholder="12345678"/>
                            <field name="is_visible"/>
                            <field name="student_rank"/>
                            <field name="result" string="student Result" digits="[1,3]"/>
                        </group>
                        <group>
                            <field name="address"/>
                            <field name="open_date" string="Open Date" placeholder="Input open date"/>

                            <field name="student_type" string="student of Type" help="Please choice student type" />
                        </group>
                    </group>
                    <group>
                        <field name="document" filename="file_name"/>
                        <field name="file_name" readonly="1"/>
                        <field name="student_image" widget="image" />
                        <field name="student_description"/>
                    </group>
                </sheel>
            </form>
        </field>
    </record>

    <record id="action_student_profile" model="ir.actions.act_window">
        <field name="name">student Profile</field>
        <field name="res_model">student.profile</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="student_root_menu" name="student"/>
    <menuitem id="student_profile_menu" parent="student_root_menu" action="action_student_profile"/>
</odoo>