<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="subject_form_view" model="ir.ui.view">
            <field name="name">subject.subject.form</field>
            <field name="model">m.subject</field>
            <field name="arch" type="xml">
                <form string="Subject">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="point"/>
                                <field name="student_id"/>
                            </group>
                            <group>
                                <field name="note"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="subject_tree_view" model="ir.ui.view">
            <field name="name">subject.subject.tree</field>
            <field name="model">m.subject</field>
            <field name="arch" type="xml">
                <tree string="Subject">
                    <field name="name"/>
                    <field name="note"/>
                    <field name="student_id"/>
                </tree>
            </field>
        </record>

